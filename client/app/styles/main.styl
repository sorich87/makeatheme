.btn-primary {
  background-image: none;
  text-transform: uppercase;
  letter-spacing: 0.09em;
  font-weight: 300;
}
.nav > li > a {
  text-transform: uppercase;
  letter-spacing: 0.09em;
  font-weight: 300;
}
.headline {
  text-align: center;
  padding: 40px 0 40px;
  border-bottom: 1px solid #EEE;
}
h1 {
  text-transform: uppercase;
}
.catch-phrase {
  text-align: center;
  letter-spacing: 0.09em;
  line-height: 1.4em;
  font-weight: bold;
}
.page-title {
  text-align: center;
  text-transform: uppercase;
  letter-spacing: 0.09em;
  margin: 60px 0;
}
.thumbnail {
  border: 1px solid #08c;
}

body {
  background-color: #fcfcfc;
  padding-top: 60px;
  padding-bottom: 60px;
}
#back-to-top {
  position: fixed;
  right: 50%;
  bottom: 1%;
  margin-right: -470px;
}
@media (max-width: 767px) {
  #back-to-top {
    right: 0%;
    margin-right: 20px;
  }
}
@media (min-width: 768px) and (max-width: 979px) {
  #back-to-top {
    margin-right: -362px;
  }
}
@media (min-width: 1200px) {
  #back-to-top {
    margin-right: -585px;
  }
}

/* Notification */
#notifications {
  left: 10px;
  top: 60px;
  position: fixed;
  width: 300px;
}

/* Theme page */
body.theme,
body.theme_edit,
body.theme_fork {
  padding-top: 40px;
  padding-bottom: 35px;
}
body.theme #main,
body.theme_edit #main,
body.theme_fork #main {
  padding: 0;
  margin: 0;
  overflow: hidden;
}
body.theme #main iframe,
body.theme_edit #main iframe,
body.theme_fork #main iframe {
  height: 100%;
  width: 100%;
  position: absolute;
}

#download-iframe {
  visibility: hidden;
}

/* Not found */
#not-found {
  text-align: center;
}
