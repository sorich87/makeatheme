<li class="span3" id="theme-{{id}}">
  <div class="thumbnail">
    <a href="/themes/{{id}}"><img src="{{screenshot_uri}}" alt=""></a>
    <div class="caption">
      <h4>{{name}}</h4>
      {{#if author}}
      <p>by <a href="#">{{author}}</a></p>
      {{/if}}
      <div>
        {{#if user_is_owner}}
        <div class="btn-group pull-right">
          <a class="btn btn-inverse" href="/themes/{{id}}"><i class="icon-pencil icon-white"></i></a>
          <button class="btn btn-danger delete" data-theme-id="{{id}}"><i
              class="icon-remove icon-white"></i></button>
        </div>
        {{else}}
        <a class="btn pull-right" href="/themes/{{id}}"><i
            class="icon-pencil"></i> view & copy</a>
        {{/if}}
      </div>
    </div>
  </div>
</li>
