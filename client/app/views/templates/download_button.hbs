{{#if currentUser}}
  <div class="btn-group btn-block">
    <button data-toggle="dropdown"
      class="btn btn-success btn-block dropdown-toggle download">
      Download Theme <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><a href="/themes/{{id}}/download" data-event="Download:format:HTML"
        target="_blank" data-bypass="true">Download HTML5</a></li>
      <li><a href="/themes/{{id}}/download/wordpress"
        data-event="Download:format:WordPress"
        target="_blank" data-bypass="true">Download WordPress</a></li>
    </ul>
  </div>
{{else}}
  <button class='btn btn-success x-login'>Login to Download</button>
{{/if}}
