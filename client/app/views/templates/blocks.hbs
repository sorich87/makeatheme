<p>Drag and drop to insert</p>
<ul class="rects"></ul>
<button class="new-block">&plus; New Block</button>
<form class="new-block-select hide">
  <legend>Add New Block</legend>
    <select>
      {{#each all}}
      <option value="{{name}}">{{label}}</option>
      {{/each}}
    </select>
  </label>
  <input class="new-block-name" type="text" value="" placeholder="Enter block name" />
  <button class="new-block-add btn">Add block</button>
</form>
