<h4>Style Editor</h4>

<div class="switch clearfix">
  <label class="checkbox">
    <input{{#if advanced}} checked="checked"{{/if}}
      type="checkbox" value="1" name="style_advanced" />
    Show Advanced Editor
  </label>
</div>

<p class="selector-choice">
Element:
{{#if parents}}
{{#each parents}}
{{#if id}}
<a href="#" data-selector="#{{id}}" data-bypass="true">#{{id}}</a> &gt;
{{else}}
<a href="#" data-selector="{{localName}}" data-bypass="true">{{localName}}</a> &gt;
{{/if}}
{{/each}}
{{/if}}
<b>{{selector}}</b>
</p>

<select class="tag">
  <option value="">Every tag</option>
  {{#each htmlTags}}
  <optgroup label="{{group}}">
    {{#each tags}}
    <option value="{{tag}}"{{selectedAttr}}>{{label}} ({{tag}})</option>
    {{/each}}
  </optgroup>
  {{/each}}
</select>
