<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <title>ThemeMy - Theme Preview</title>

  <script src="/javascripts/vendor.js"></script>
  <script src="/javascripts/app.js"></script>
  <script>
    Application = {
      data: {
          theme: <%= theme %>
        , style: <%= style %>
        <% if pieces %>, theme_pieces: <%= pieces %><% end %>
        <% if blocks %>, blocks: <%= blocks %><% end %>
        <% if preview_only %>, preview_only: true<% end %>
        <% unless current_user.nil? %>, currentUser: <%= current_user.to_json %><% end %>
      }
    };
    require('initialize');
  </script>

  <link rel="stylesheet" href="/stylesheets/editor.css">
</head>
<body>
  <div id="page" class="hfeed site"><%= template %></div>
</body>
