        data: {
          <% unless Sinatra::Base.production? %>debug: true,<% end %>
          <% unless current_user.nil? %>currentUser: <%= current_user.to_json %>,<% end %>
          <% unless themes.nil? %>themes: <%= themes.to_json %><% end %>
        }
      };
      require('initialize');
    </script>
